<section class="section-skewed p-0">
  <form action="/users/signup" method="post" id="freelanceform" enctype="multipart/form-data">
    <div class="container">
			<div class="row">
				<div class="col-md-5 mb-25">
				  <h2 style="font-family: 'Source Sans Pro', sans-serif; color:#000000;">...and mark the beginning of<br><span style="font-size:130%; font-family: 'Pacifico', sans-serif; color:#00c3da;"> your new life</span></h2>              
        </div>
			</div>
      <div class="row">
        <div class="col-md-5 mb-25">
        </div>
			<div class="col-md-5 mb-25">
        <div class="form-group">
				  <label>Name</label>
          <p class="small">Official name as displayed on your government ID</p>
          <input class="form-control input-sm" type="text" name="firstname" placeholder="First name">
          <br/>
          <input class="form-control input-sm" type="text" name="lastname" placeholder="Last name">
        </div>
				<div class="form-group">
				  <label>Nickname</label>
					<p class="small">What your friends call you -- this name will be displayed on the site</p>
          <input class="form-control input-sm" type="text" name="nickname" placeholder="Username" required>
        </div>
        <div class="form-group">
					<label>Email address</label>
				  <input class="form-control input-sm" type="email" name="email" placeholder="Email address">
				</div>
				<div class="form-group">
				  <label>Password</label>
            <input class="form-control input-sm" type="password" name="password" placeholder="Choose a strong password">
        </div>  
				<hr>
			  <div class="form-group">
				  <label>Address</label>
          <input class="form-control input-sm" type="text" name="street" placeholder="Street + number" required>
        </div>
				<div class="form-group" style="width: 100%;">
          <input class="form-control input-sm" type="text" name="postcode" placeholder="Postcode" style="display: inline; width: 40%;">
					<input class="form-control input-sm" type="text" name="city" placeholder="City"  style="display: inline; width: 59%;">
        </div>
			  <div class="form-group">
            <select id="country" name="country" class="form-control input-sm required" required></select>
        </div>
				<hr>
			  <div class="form-group">
				  <label>Date of birth</label>
          <input class="form-control input-sm" type="date" name="birthdate" id="birthdate" placeholder="Birthdate" min='01-01-1899' max='13-13-2000' required></input>
        </div>
			  <div class="form-group">
				  <label>Profession</label>
				  <p class="small">What do you do for a living? ;)</p>
          <input class="form-control input-sm" type="text" name="profession" placeholder="">
        </div>
        <div class="form-group">
				  <label>Country of origin</label>
          <select id="country2" name="country2" class="form-control input-sm required"></select>
        </div>
        <div class="form-group">
          <label>Languages you speak</label>
          <p class="small">Use the CTRL button to select multiple languages.</p>
					<select class="form-control bfh-languages" multiple="multiple"></select>
        </div>
        <hr>
			  <div class="form-group">
          <label>Pictures</label>
          <div class="box upload">
					<input type="file" name="profilepic" id="file-3" class="inputfile inputfile-3" data-multiple-caption="{count} files selected" multiple />
					<label for="file-3"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17"><path d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z"/></svg> <span>Upload your profile picture</span></label>
				</div>
        <div class="box upload">
					<input type="file" name="governmentId" id="file-4" class="inputfile inputfile-3" data-multiple-caption="{count} files selected" multiple />
					<label for="file-4"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17"><path d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z"/></svg> <span>Upload your government ID</span></label>
				</div>
			  </div>	
          {{!-- <input id="uploadFile" placeholder="Upload government ID" disabled="disabled" />
				  <div class="fileUpload btn btn-primary">
