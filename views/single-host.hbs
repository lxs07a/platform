<section class="page-title text-dark gradient-bg section-skewed big-padding-bt" data-gradients="#374346,#61c4da">
  <div class="row-parallax-bg">
    <div class="parallax-wrapper">
      <div class="parallax-bg">
        <img src="../../uploads/{{cover_pic}}" alt="">
      </div>
    </div>
    <div class="parallax-overlay"></div>
  </div>
  <div class="centrize">
    <div class="v-center">
      <div class="container">
        <div class="row">
          <div class="col-md-8 col-md-offset-2">
            <div class="title text-center">
              <h1>{{facility_name}}</h1>
              <h3>{{country}} | {{lng}}</h3>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


<section class="section-skewed" data-custom-bg="#ffffff">
  <div class="container">
    <div class="row">
      <div class="col-md-5 mb-50">
        {{!-- <div class="title">
          <h2 class="mt-0">Scuola di Napoli</h2>
        </div> --}}
        <div class="section-content">
          <p class="big">{{question1}}</p>

        </div>
      </div>
      <div class="col-md-5 col-md-offset-2">
        <div class="project-info">
          <ul>
            <li><strong>Address:</strong>{{address.street}}<br />{{address.postcode}} {{city}}</li>
            <br />
            <li><strong>Website:</strong><a href="#">{{website}}</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>


<section class="section" data-custom-bg="#ffffff" style="margin-top: -121px; padding-top: 121px; z-index: 9;
  height:800px">
  <div class="container">
    <div class="row">
      <div class="col-md-12 map-side map-right">
        <div id="map" data-lat="{{lat}}" data-long="{{lng}}"></div>
      </div>
    </div>
  </div>
</section>




<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key={{key}}"></script>